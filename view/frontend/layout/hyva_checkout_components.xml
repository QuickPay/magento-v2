<?xml version="1.0"?>
<!--
/**
 * QuickPay Gateway - Hyva Checkout Components Configuration
 * Adds metadata for QuickPay payment methods in Hyva checkout
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- QuickPay Gateway payment method metadata -->
        <referenceBlock name="hyva.checkout.payment.methods">
            <block name="quickpay_gateway" as="quickpay_gateway" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="visa" xsi:type="string">QuickPay_Gateway::images/logo/visa.svg</item>
                            <item name="mastercard" xsi:type="string">QuickPay_Gateway::images/logo/mastercard.svg</item>
                            <item name="applepay" xsi:type="string">QuickPay_Gateway::images/apple-pay.svg</item>
                        </item>
                        <item name="subtitle" xsi:type="string">Secure payment with Visa, Mastercard and Apple Pay</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_klarna" as="quickpay_klarna" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/klarna.svg</item>
                        <item name="subtitle" xsi:type="string">Buy now, pay later with Klarna</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_mobilepay" as="quickpay_mobilepay" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/mobilepay_payment.png</item>
                        <item name="subtitle" xsi:type="string">Pay with MobilePay</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_vipps" as="quickpay_vipps" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/vipps.png</item>
                        <item name="subtitle" xsi:type="string">Pay with Vipps</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_paypal" as="quickpay_paypal" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/paypal.svg</item>
                        <item name="subtitle" xsi:type="string">Pay with PayPal</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_viabill" as="quickpay_viabill" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/viabill.png</item>
                        <item name="subtitle" xsi:type="string">Pay with ViaBill</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_swish" as="quickpay_swish" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/swish.png</item>
                        <item name="subtitle" xsi:type="string">Pay with Swish</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_trustly" as="quickpay_trustly" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/trustly.svg</item>
                        <item name="subtitle" xsi:type="string">Pay with Trustly</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_anyday" as="quickpay_anyday" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/anydaysplit.svg</item>
                        <item name="subtitle" xsi:type="string">Pay with Anyday</item>
                    </argument>
                </arguments>
            </block>
            
            <block name="quickpay_googlepay" as="quickpay_googlepay" template="QuickPay_Gateway::payment/form">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="string">QuickPay_Gateway::images/google-pay.svg</item>
                        <item name="subtitle" xsi:type="string">Pay with Google Pay</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
